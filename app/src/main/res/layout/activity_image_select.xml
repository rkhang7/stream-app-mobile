<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    tools:context=".imagepicker.ImageSelectActivity">

    <LinearLayout
        android:id="@+id/change_avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/Heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:gravity="center"
            android:padding="12dp"
            android:text="Ảnh đại diện"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/view_avatar_btn"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableStart="@drawable/icons8_eye_48"
                android:text=" Xem ảnh đại diện"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/image_camera_btn"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableStart="@drawable/icons8_camera_48"
                android:text=" Chụp ảnh mới"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/image_gallery_btn"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableStart="@drawable/icons8_image_48"
                android:text=" Chọn ảnh từ thiết bị"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>




    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:visibility="gone" />

</LinearLayout>