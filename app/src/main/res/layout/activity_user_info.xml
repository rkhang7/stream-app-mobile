<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glass_primary_bg"
    tools:context=".activity.UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cover_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/bgImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/u_sky"/>

                    <ImageButton
                        android:id="@+id/user_info_back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_white_24"
                        android:background="@color/transparent"
                        android:padding="8dp"/>
                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avt_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="-25dp"
                app:cardCornerRadius="50dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_info_avatar_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stream_64" />

            </com.google.android.material.card.MaterialCardView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/cover_iv"
                app:layout_constraintEnd_toEndOf="@id/cover_iv"
                android:src="@drawable/icons8_view_more_24px_1"
                android:translationZ="2dp"
                android:background="@color/transparent"
                android:layout_margin="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/user_info_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Điểu Long"
            android:textAlignment="center"
            style="@style/Heading2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avt_iv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/custom_rounded_background">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_account_32px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <ImageButton
                    android:id="@+id/edit_first_name_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_pen_24px_1"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/user_info_first_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="abc"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_account_32px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <ImageButton
                    android:id="@+id/edit_last_name_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_pen_24px_1"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/user_info_last_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="abc"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_calendar_32px_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <ImageButton
                    android:id="@+id/edit_dob_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_pen_24px_1"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/user_info_dob_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="07/07/2000"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_gender_32px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <ImageButton
                    android:id="@+id/edit_gender_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_pen_24px_1"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/user_info_gender_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="Nam"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_email_sign_32px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <EditText
                    android:id="@+id/user_info_email_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="long1234@gmail.com"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_phone_32px_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <EditText
                    android:id="@+id/user_info_phone_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:hint="Không có"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>