<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_avatar"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_toStartOf="@+id/last_date_line_tv"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/avatar_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khang hoang"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@id/name_tv"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/last_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:textSize="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/last_date_line_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="19/11"/>


    <TextView
        android:layout_below="@+id/last_date_line_tv"
        android:id="@+id/unread_message_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:text="5+"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/unread_message_bg"/>

</RelativeLayout>