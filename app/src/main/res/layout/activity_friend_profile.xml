<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FriendProfileActivity">


    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/u_sky"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cover_iv" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Name"
        style="@style/Heading2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avt_iv" />

    <Button
        android:id="@+id/inbox_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="Nhắn tin"
        android:background="@drawable/inbox_btn_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <Button
        android:visibility="visible"
        android:id="@+id/friend_request_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Kết bạn"
        android:background="@drawable/corners_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <Button
        android:visibility="invisible"
        android:id="@+id/cancel_friend_request_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Hủy kết bạn"
        android:background="@drawable/corners_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <Button
        android:visibility="invisible"
        android:id="@+id/delete_friend_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Xóa bạn"
        android:background="@drawable/corners_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <Button
        android:visibility="invisible"
        android:id="@+id/accept_friend_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:text="Đồng ý kết bạn"
        android:background="@drawable/corners_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />


    <LinearLayout
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/friend_request_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/custom_rounded_background">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_calendar_32px_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <TextView
                    android:id="@+id/friend_info_dob_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="07/07/2000"
                    android:layout_marginStart="32dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_gender_32px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <TextView
                    android:id="@+id/friend_info_gender_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="Nam"
                    android:layout_marginStart="32dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_email_sign_32px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <TextView
                    android:id="@+id/friend_info_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text="long1234@gmail.com"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_50"
                    android:layout_marginTop="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                android:padding="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icons8_phone_32px_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:layout_marginLeft="5dp"
                    style="@style/TextNormalBold"
                    app:layout_flexGrow="1"/>
                <TextView
                    android:id="@+id/friend_info_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    app:layout_wrapBefore="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:hint="Không có"
                    android:layout_marginStart="32dp"
                    android:enabled="false"/>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>