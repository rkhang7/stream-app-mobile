<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_avatar"
            android:visibility="gone"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/text_layout"
            android:layout_alignParentEnd="true"
            android:minHeight="40dp"
            android:minWidth="60dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/chat_image"
            android:background="@drawable/line_item_right_bg"
            android:gravity="start"
            android:padding="4dp">

            <TextView
                android:id="@+id/chat_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="a"
                android:textAlignment="textStart"
                android:textColor="@color/white" />
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:id="@+id/text_last_time_line_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:30"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/image_layout"
            android:layout_alignParentEnd="true"
            android:minHeight="40dp"
            android:minWidth="60dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/chat_image"
            android:gravity="start">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:background="@drawable/image_content_bg"
                    android:id="@+id/chat_image_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:adjustViewBounds="true"
                    android:src="@drawable/default_image"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:id="@+id/image_last_time_line_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:30"
                android:layout_marginStart="4dp"/>
        </LinearLayout>


        <RelativeLayout
            android:background="@drawable/line_item_right_bg"
            android:visibility="visible"
            android:id="@+id/file_layout"
            android:layout_alignParentEnd="true"
            android:minHeight="40dp"
            android:minWidth="60dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/chat_image"
            android:gravity="start">

            <ImageView
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/type_file_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icons8_json_48"/>

            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/type_file_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_file_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name file"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/type_file_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOCX"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

            </LinearLayout>


            <TextView
                android:textColor="@color/white"
                android:layout_below="@id/type_file_iv"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:id="@+id/file_last_time_line_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:30"
                android:textSize="10dp" />


        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>