<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.GroupOptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_image_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/group_chat"/>

        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TextNormal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/add_members_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:flexDirection="row"
            app:alignItems="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_selectable_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group_add_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm thành viên"
                android:layout_marginStart="10dp"
                style="@style/TextNormal"
                app:layout_flexGrow="1"/>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/view_members_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:flexDirection="row"
            app:alignItems="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_selectable_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/view_group_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thành viên"
                android:layout_marginStart="10dp"
                style="@style/TextNormal"
                app:layout_flexGrow="1"/>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/leave_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:flexDirection="row"
            app:alignItems="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_selectable_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/leave_group" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rời nhóm"
                android:textColor="@color/my_read"
                android:layout_marginStart="10dp"
                style="@style/TextNormal"
                app:layout_flexGrow="1"/>
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>