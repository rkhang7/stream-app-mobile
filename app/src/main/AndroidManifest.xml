<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iuh.stream">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stream"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.FriendProfileActivity"
            android:exported="true"/>
        <activity
            android:name=".activity.AddFriendActivity"
            android:exported="true"
            android:label="Thêm bạn"/>
        <activity
            android:name=".activity.FriendInvitationActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PhoneFriendsActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SignInActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".activity.StartActivity"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/Theme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>